import numpy as np
import matplotlib.pyplot as plt


def f(x, y):
    return 4*x - 3*y + 7*x*y

def g(x, y):
    return 4*x + 2*y + 2*x**2 - 3*y**2

def dx_dt(x, y):
    return f(x, y) / g(x, y)

def dy_dt(x, y):
    return 1 

x = np.linspace(-2, 2, 20)
y = np.linspace(-2, 2, 20)
X, Y = np.meshgrid(x, y)
U = dx_dt(X, Y)
V = dy_dt(X, Y)

puntos_equilibrio = [(0, 0), (3/11, 1), (1/3, 2), (1, -1)]


plt.figure(figsize=(10, 8))
plt.quiver(X, Y, U, V, color='b')

for px, py in puntos_equilibrio:
    plt.plot(px, py, 'ro')  

plt.title('Campo Vectorial con Puntos de Equilibrio')
plt.xlabel('x')
plt.ylabel('y')
plt.grid()

plt.show()
